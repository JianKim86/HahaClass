<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PIntroActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.bg"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".PIntroActivity"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Applayoutmain"
            app:elevation="0dp"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_t"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:minHeight="0dp"
                app:theme="@style/ToolbarThemeMain"
                android:background="@color/colorAlpa"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_app_name"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/toolbar_subtitle"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitle_app_name"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/toolbar_title"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="20sp"
                        />
                </LinearLayout>




            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:id="@+id/layout_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="?attr/actionBarSize"
                android:theme="@style/AppTheme.bg"
                android:background="@color/colorAlpa"
                >

                    <RelativeLayout
                        android:id="@+id/layout_iv"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                       >

                        <ImageView
                            android:clickable="true"
                            android:id="@+id/iv_introimg"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            />
                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                <ScrollView
                    android:layout_below="@+id/layout_iv"
                    android:id="@+id/layout_title_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:layout_marginBottom="110dp"
                    android:background="@color/colorAlpa"

                    >
                    <RelativeLayout
                        android:padding="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:layout_marginBottom="16dp"
                        android:background="@color/colorAlpa"
                        >

                        <TextView

                            android:id="@+id/tv_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:clickable="true"
                            android:gravity="center"
                            android:lineSpacingExtra="2sp"
                            android:padding="8dp"
                            android:text=" 행복한 나를 찾기
\n나의 강점과 비젼(꿈)을 찾아,
\n주도적 삶의 역량을 기르기
\n 타인이 나와 다름을 인식하고,
\n대화법을 익혀 소통의 역량을 기르기
\n\n 감성 스피치 역량 강화하기
\n대중 앞에서 자신 있게 나를 표현하며
\n강의 할 수 있는 역량을 기르기
\n 하박수 웃음운동을 통하여 감성 근육을 강화
\n스트레스 반사의 힘과 심신의 유연성,
\n회복탄력성을 기르기
"
                            android:textColor="@color/colorDarkGray"
                            android:textSize="16sp"
                            android:background="@color/colorAlpa"
                            android:textStyle="normal"
                            android:layout_marginTop="0dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/tv_text"
                            android:textSize="10sp"
                            android:text="(행복을 만드는)창의융합교육연구소"
                            android:textColor="@color/colorDarkGray"
                            android:background="@color/colorAlpa"
                            />
                    </RelativeLayout>
                </ScrollView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv_goto_boardly"
                    android:layout_marginTop="2dp"

                    >
                    <Button
                        android:layout_marginTop="2dp"
                        android:id="@+id/tv_goto_board"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="게시판"
                        android:textStyle="bold"

                        android:textColor="@color/colorWhite"
                        android:background="@drawable/btn_str_main_m"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_goto_boardly"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <Button
                            android:id="@+id/tv_goto_instructor"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="강사 선택"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:background="@drawable/btn_str_main_m"
                            />
                        <ListView

                            android:id="@+id/lv_instructor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:dividerHeight="0px"
                            android:divider="@color/colorAlpa"
                            android:background="@color/colorAlpa"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:visibility="gone"></ListView>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        />

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->

        <!--android:fillViewport="true"-->
        <!--&gt;-->
    <!--</ScrollView>-->

</android.support.v4.widget.DrawerLayout>